;;; See 
;;; http://ergoemacs.org/emacs/emacs_make_modern.html

(let ((default-directory "~/.emacs.d/lisp/")) (normal-top-level-add-subdirs-to-load-path))


;;; allow for C-C, C-X, C-V, C-Z for copy, cut, paste, undo
;(cua-mode 1)


(electric-pair-mode 1);;; Autoclose brackets
(show-paren-mode 1)   ; parenthesis matching
;; ==== Set it to highlight the current line ====

(global-hl-line-mode 1)


;; ==== Line by line scrolling ====
(setq scroll-step 1)

;; ===== Turn off tab character =====

;;
;; Emacs normally uses both tabs and spaces to indent lines. If you
;; prefer, all indentation can be made from spaces only. To request this,
;; set `indent-tabs-mode' to `nil'. This is a per-buffer variable;
;; altering the variable affects only the current buffer, but it can be
;; disabled for all buffers.

;;
;; Use (setq ...) to set value locally to a buffer
;; Use (setq-default ...) to set value globally 
;;
(setq-default indent-tabs-mode nil)
;(setq-default tab-width 4)
(setq-default default-tab-width 4)

;; ========== Place Backup Files in Specific Directory ==========
(setq make-backup-files nil) ; stop creating those backup~ files
(setq auto-save-default nil) ; stop creating those #autosave# files

;; ========== Enable Line and Column Numbering ==========
(global-linum-mode 1) ; line numbers on left
(line-number-mode 1)  ; line numbers at the bottom
(column-number-mode 1); column number at bottom

; Todo Install tabbar-mode

; blank mode, display tabs
;(require 'blank-mode)

;(load-theme solarized-dark t)
(require 'color-theme)
(color-theme-initialize)
