alias pbcopy='xclip -selection clipboard'
alias pbpaste='xclip -selection clipboard -o'


alias o='gnome-open'

# provides support for clipboard pasting in vim
alias vim='vimx'
alias vi='vimx'

# trash remove
alias trm='gvfs-trash'

alias pip='pip-python'
alias pip3='pip-python3'

epstopdfall () { ls *.eps | awk '{system("epstopdf "$0 )}'; }

#uncomment if you want to change to the first dir
#mcd () { mkdir -p "$@" && cd "$1"; }
#change to the last dir
mcd () { mkdir -p "$@" && cd "$_"; }



alias n4mount="simple-mtpfs ~/Misc/Nexus4"
alias n4umount="fusermount -u ~/Misc/Nexus4"
